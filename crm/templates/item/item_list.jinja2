{% extends 'base.jinja2' %}
{% block content %}
<h1>전체 상품 리스트</h1>
<hr>
<form action='{{ url_for("item.get_items") }}' class="row g-3 justify-content-center">
    <div class="col-4">
        <input type="text" class="form-control" id="name" name="name" placeholder="{{ name or '상품명 검색' }}" />
    </div>
    <div class="col-auto text-center">
        <button type="submit" class="btn btn-primary px-3">검색</button>
    </div>
    <div class="col-auto text-center">
        <a href="{{ url_for('item.get_items') }}" class="btn btn-danger px-3">초기화</a>
    </div>
</form>
<hr>
<div class="card my-3">
    <div class="card-header">총 상품: {{ '{:,}'.format(item_total) }}개</div>
    <ul class="list-group list-group-flush">
        {% for items in item_list %}
        <a href="{{ url_for('item.get_item', id=items.Id) }}"
            class="list-group-item list-group-item-action d-flex justify-content-between align-items-start"
            aria-current="true">
            <div class="ms-2 me-auto">
                <div class="fw-bold">
                    [ <span class="text-primary">{{ items.Type }}</span> ] {{ items.Name }}
                </div>
            </div>
            <span class="badge bg-danger">₩ {{ '{:,}'.format(items.UnitPrice) }}</span>
        </a>
        {% endfor %}
    </ul>
</div>
<!-- 페이징처리 시작 -->
<ul class="pagination justify-content-center">
    <!-- 이전페이지 -->
    {% if item_list.has_prev %}
    <li class="page-item">
        <a class="page-link" href="?page={{ item_list.prev_num }}"><i class="bi bi-caret-left-fill"></i></a>
    </li>
    {% endif %}
    <!-- 페이지번호 -->
    {% for page_num in item_list.iter_pages() %}
    {% if page_num %}
    {% if page_num == item_list.page %}
    <li class="page-item active" aria-current="page">
        <a class="page-link" href="#">{{ page_num }}</a>
    </li>
    {% elif page_num == 1 or page_num == item_list.pages or (page_num >= item_list.page - 2 and page_num <=
        item_list.page + 2) %} <li class="page-item">
        <a class="page-link" href="?page={{ page_num }}">{{ page_num }}</a>
        </li>
        {% elif (page_num == item_list.page - 3 and item_list.page > 3) or (page_num == item_list.page + 3 and
        item_list.page < item_list.pages - 3) %} <li class="disabled">
            <a class="page-link" href="#">...</a>
            </li>
            {% endif %}
            {% else %}
            <li class="disabled">
                <a class="page-link" href="#">...</a>
            </li>
            {% endif %}
            {% endfor %}
            <!-- 다음페이지 -->
            {% if item_list.has_next %}
            <li class="page-item">
                <a class="page-link" href="?page={{ item_list.next_num }}"><i class="bi bi-caret-right-fill"></i></a>
            </li>
            {% endif %}
</ul>
<!-- 페이징처리 끝 -->
{% endblock %}