{% extends 'base.jinja2' %}
{% block content %}
<h1>
    <strong>{{ order.OrderAt|date }}</strong> 주문 상세내역
</h1>
<hr>
<div class="card border-success my-3">
    <div class="card-header">기본정보 (UUID: {{ order.Id }})</div>
    <div class="card-body">
        <dl class="row my-2">
            <dt class="col-sm-2">주문시간</dt>
            <dd class="col-sm-10">
                {{ order.OrderAt|datetime }}
            </dd>
            <dt class="col-sm-2">매장명</dt>
            <dd class="col-sm-10">
                {{ order.StoreId }}
            </dd>
            <dt class="col-sm-2">주문자 명</dt>
            <dd class="col-sm-10">
                {{ order.UserId }}
            </dd>
        </dl>
    </div>
</div>
<div class="card border-primary my-3">
    <div class="card-header">
        상세 내역
    </div>
    <ul class="list-group list-group-flush">
        {% for item in order_detail %}
        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <span class="fw-bold">{{ item.Name }}</span>
            </div>
            <div>₩ {{ '{:,}'.format(item.UnitPrice) }}</div>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}